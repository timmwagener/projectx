# http://editorconfig.org

# Section names are filename GLOBS

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{spec,py}]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[LICENSE]
insert_final_newline = false

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
